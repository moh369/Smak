<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_marginTop="24dp" android:id="@+id/editTxt"
            android:hint="email "/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTxt"
            android:hint="password"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/LogActivityBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:textColor="@android:color/white" android:background="@color/colorPrimary"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/passTxt" android:onClick="loginBTN"/>
    <TextView
            android:text="Do you have account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView3" app:layout_constraintTop_toBottomOf="@+id/LogActivityBtn"
            android:layout_marginTop="204dp" android:textStyle="bold" android:textAlignment="textStart"/>
    <Button
            android:text="Sign Up here"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/SignUpBtn" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="32dp" android:textColor="@android:color/white"
            android:background="@color/colorPrimary" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:onClick="sinUpBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>